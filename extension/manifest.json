{
  "name": "SafeShop",
  "description": "Extension that makes sure you are not using fake shop",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Verify page"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
